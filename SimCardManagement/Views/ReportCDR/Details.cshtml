@model IEnumerable<ReportCDRModelView>

@{
    ViewData["Title"] = "CDRDetails";
    double tot = 0;
}


<partial name="_HeaderPartial" model='new HeaderModelView {  title = "CDR" , subTitle = "تفاصيل"}' />


<!-- Page content -->
<div class="container-fluid mt--6">
    <!-- Table -->
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header">
                    <div class=" row">
                        <h3 class="mb-0 col-6">تفاصيل</h3>
                        <div class="col-6 text-left">
                            <a asp-action="Create" asp-route-id="@ViewBag.groupId"  class="mb-0 text-white btn btn-warning">إضافة</a>
                        </div>
                    </div>

                </div>
                <div class="table-responsive py-4">
                    <table class="table table-flush text-center" style="background-color:cornflowerblue;color:white" id="datatable-buttons">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.GroupId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Amount)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Group.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <th></th>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th>
                                    @foreach (var item in Model)
                                    {
                                        tot += item.Amount;
                                    }
                                    @if (tot > ViewBag.groupLimit)
                                    {
                                    <span class="text-red bg-white p-1"> ألمجموع @tot</span>
                                    }
                                    else
                                    {
                                    <span class="text-green bg-white p-1"> ألمجموع @tot</span>
                                    }
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

