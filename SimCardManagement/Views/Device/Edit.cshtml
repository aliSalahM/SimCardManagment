                            <span asp-validation-for="IdCardNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Email" class="form-control-label"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ألبريد الألكتروني" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="DeviceName" class="form-control-label"></label>
                            <input asp-for="DeviceName" class="form-control" placeholder="إسم ألجهاز" />
                            <span asp-validation-for="DeviceName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="UsageType" class="form-control-label"></label>
                            <input asp-for="UsageType" class="form-control" placeholder="نوع الأستخدام" />
                            <span asp-validation-for="UsageType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="IMEI" class="form-control-label"></label>
                            <input asp-for="IMEI" class="form-control" placeholder="ألرقم ألتسلسلي" />
                            <span asp-validation-for="IMEI" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SimCardId" class="form-control-label"></label>
                            <select class="form-control" data-toggle="select" title="Simple select" asp-for="SimCardId" asp-items='new SelectList(ViewBag.sims,"Id","SimCardNumber")'><option>إختار</option></select>
                            <span asp-validation-for="SimCardId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="CarType" class="form-control-label"></label>
                            <input asp-for="CarType" class="form-control" placeholder="نوع ألعجلة" />
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="CarColor" class="form-control-label"></label>
                            <input asp-for="CarColor" class="form-control" placeholder="لون ألعجلة" />
                            <span asp-validation-for="CarColor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CarNumber" class="form-control-label"></label>
                            <input asp-for="CarNumber" class="form-control" placeholder="رقم ألعجلة" />
                            <span asp-validation-for="CarNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-2">
                        <div class="form-group">
                            <label asp-for="Model" class="form-control-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="موديل ألعجلة" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <label asp-for="SanaweiaNumber" class="form-control-label"></label>
                            <input asp-for="SanaweiaNumber" class="form-control" placeholder="رقم ألسنوية" />
                            <span asp-validation-for="SanaweiaNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <label asp-for="Vin" class="form-control-label"></label>
                            <input asp-for="Vin" class="form-control" placeholder="رقم ألشاصي" />
                            <span asp-validation-for="Vin" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row" dir="ltr">
                    <div class="form-group col-md-2">
                        <input type="submit" value="تعديل" class="btn btn-block btn-primary" />
                    </div>
                </div>



            </div>



        </form>
        <!-- Card body -->

    </div>

</div>


@if (ViewBag.alertMsg != null)
{
    <script>
        Swal.fire({
          icon: 'success',
          title: '@ViewBag.alertMsg',
          footer: '<a href>© جميع الحقوق محفوظة لشركة مدينتي</a>'
        })

    </script>
}














