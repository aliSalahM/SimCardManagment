@model DeviceModelView

@{
    ViewData["Title"] = "Edit";
}

<partial name="_HeaderPartial" model='new HeaderModelView {  title = "الأجهزة" , subTitle = "تعديل جهاز"}' />

<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="card mb-4">
        <!-- Card header -->
        <div class="card-header">
            <h3 class="mb-0">تعديل جهاز</h3>
        </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <!-- Form groups used in grid -->
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Name" class="form-control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="الأسم ألرباعي/ألجهة ألمستفيدة" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Clan" class="form-control-label"></label>
                            <input asp-for="Clan" class="form-control" placeholder="أللقب" />
                            <span asp-validation-for="Clan" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Birthdate" class="form-control-label"></label>
                            <input asp-for="Birthdate" class="form-control" placeholder="ألتولد" />
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">

                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="City" class="form-control-label"></label>
                            <input asp-for="City" class="form-control" placeholder="محل ألولادة" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Address" class="form-control-label"></label>
                            <input asp-for="Address" class="form-control" placeholder="عنوان السكن" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="NearPoint" class="form-control-label"></label>
                            <input asp-for="NearPoint" class="form-control" placeholder="اقرب نقطة دالة" />
                            <span asp-validation-for="NearPoint" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Phone1" class="form-control-label"></label>
                            <input asp-for="Phone1" class="form-control" placeholder="الهاتف الأول" />
                            <span asp-validation-for="Phone1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Phone2" class="form-control-label"></label>
                            <input asp-for="Phone2" class="form-control" placeholder="الهاتف الثاني" />
                            <span asp-validation-for="Phone2" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Work" class="form-control-label"></label>
                            <input asp-for="Work" class="form-control" placeholder="ألعمل" />
                            <span asp-validation-for="Work" class="text-danger"></span>
                        </div>
                    </div>
