@model GroupModelView

@{
    ViewData["Title"] = "Create";
}

<partial name="_HeaderPartial" model='new HeaderModelView {  title = "ألمجموعات" , subTitle = "إضافة مجموعة"}' />


<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="card mb-4">
        <!-- Card header -->
        <div class="card-header">
            <h3 class="mb-0">إضافة مجموعة</h3>
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <!-- Form groups used in grid -->
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Name" class="form-control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="إسم ألمجموعة" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="BelongToId" class="control-label"></label>
                            <select class="form-control" asp-for="BelongToId" asp-items='new SelectList(ViewBag.users,"Id","Name")'></select>
                            <span asp-validation-for="BelongToId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row" dir="ltr">
                    <div class="form-group col-md-2">
                        <input type="submit" value="إضافة" class="btn btn-block btn-primary" />
                    </div>
                </div>



            </div>



        </form>
        <!-- Card body -->

    </div>

</div>


@if (ViewBag.alertMsg != null)
{
    <script>
        Swal.fire({
          icon: 'success',
          title: '@ViewBag.alertMsg',
          footer: '<a href>© جميع الحقوق محفوظة لشركة مدينتي</a>'
        })

    </script>
}
